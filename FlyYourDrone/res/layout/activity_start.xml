<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <Button
        android:id="@+id/goPilotButton"
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/startbutton_pl" />

    <Button
        android:id="@+id/goAboutButton"
        android:background="@drawable/aboutbutton_pl"
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="195dp"/>

    <Button
        android:id="@+id/goMYFlightsButton"
        android:background="@drawable/flightsbutton_pl"
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="195dp" />

    <Button
        android:id="@+id/goOptionsButton"
        android:background="@drawable/optionsbutton_pl"
        android:layout_width="270dp"
        android:layout_height="110dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:id="@+id/imageViewDashboard"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/title"
        android:contentDescription="title" />

</FrameLayout>
